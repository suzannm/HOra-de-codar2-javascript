<script>

//Faça programa que leia um valor informado pelo usuário e diga se o valor informado é positivo, negativo ou zero

let valor = prompt("Digite um valor: ");
valor = Number(valor);
if (valor > 0) {
    alert("O valor informado é positivo.");
} else if (valor < 0) {
    alert("O valor informado é negativo.");
} else {
    alert("O valor informado é zero.");
}


</script>

